package Week1;

import java.util.Scanner;

/*
3) Дано трехзначное число. Определить: а) верно ли, что все его цифры
одинаковые; б) есть ли среди его цифр одинаковые.
 */
 
public class Add_1_3 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int number = scanner.nextInt();


        int a = number % 10;
        int b = (number / 10) % 10;
        int c = (number / 10) / 10;

        if (a == b && a == c) {
            System.out.println("All the numbers are the same");
        } else if (a == b || a == c || b == c) {
            System.out.println("Two numbers are the same");
        } else {
            System.out.println("Non identical numbers");
        }

    }
}
