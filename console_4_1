package Week1;

/*
Пользователь вводит параметр с консоли (текущий час от 0 до 24)
				Если время от 9 до 18, то выводим "Я на работе", в другом случае "Я отдыхаю")
*/                

import java.util.Scanner;


public class console_4_1 {
    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);
        int time = scanner.nextInt();

        System.out.println(getCorrectTime(time));

    }

    private static String getCorrectTime(int time) {
        if (time >= 9 && time <= 18) return "Я на работе";
        if (time >= 0 && time < 9 || time > 18 && time < 25) return "Я отдыхаю";

        throw new IllegalArgumentException("Incorrectly entered time " + time);
    }


}
